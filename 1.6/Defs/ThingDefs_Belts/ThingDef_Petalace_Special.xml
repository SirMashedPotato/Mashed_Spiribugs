	<!-- ==========[Silver/Gleaming]========== -->
	<ThingDef ParentName="Mashed_Spiribird_ApparelPetalaceBase_Luxurious">
		<defName>Mashed_Spiribug_ApparelPetalaceSilver</defName>
		<label>petalace (gleaming)</label>
		<description>A petalace imbued with gleaming spiribug dust. The effect of all pollen deposited by spiribirds is slightly increased, causing more pollen buildup per interaction. Additionally the moult progress of gleaming spiribugs is increased.\n\nThe quality of the petalace will also affect the amount of pollen left behind.\n\nThe effects of pollen are lost if the petalace is unequipped.</description>
		<descriptionHyperlinks>
			<ThingDef>Mashed_Spiribug_SpiribugSilver</ThingDef>
		</descriptionHyperlinks>
		<modExtensions>
			<li Class="Mashed_Spiribirds.PetalaceProperties">
				<pollenAffinity>
					<li>
						<pollenHediff>Mashed_Spiribird_SpiribirdPollenGreen</pollenHediff>
						<severityGain>0.1</severityGain>
						<limit>1</limit>
					</li>
					<li>
						<pollenHediff>Mashed_Spiribird_SpiribirdPollenOrange</pollenHediff>
						<severityGain>0.1</severityGain>
						<limit>1</limit>
					</li>
					<li>
						<pollenHediff>Mashed_Spiribird_SpiribirdPollenPink</pollenHediff>
						<severityGain>0.1</severityGain>
						<limit>1</limit>
					</li>
					<li>
						<pollenHediff>Mashed_Spiribird_SpiribirdPollenRed</pollenHediff>
						<severityGain>0.1</severityGain>
						<limit>1</limit>
					</li>
					<li>
						<pollenHediff>Mashed_Spiribird_SpiribirdPollenYellow</pollenHediff>
						<severityGain>0.1</severityGain>
						<limit>1</limit>
					</li>
				</pollenAffinity>
				<spiribugKind>Mashed_Spiribug_SpiribugSilver</spiribugKind>
				<extraMoltGain>3</extraMoltGain>
			</li>
		</modExtensions>
		<graphicData>
			<texPath>Things/Item/Equipment/Mashed_Petalace/Mashed_Petalace_Gleaming</texPath>
		</graphicData>
		<costList>
			<Mashed_Spiribird_SpiribushFlower>1</Mashed_Spiribird_SpiribushFlower>
			<Mashed_Spiribird_PollenPrism>2</Mashed_Spiribird_PollenPrism>
			<Mashed_Spiribug_DustSilver>8</Mashed_Spiribug_DustSilver>
		</costList>
	</ThingDef>
