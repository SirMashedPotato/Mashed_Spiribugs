<?xml version="1.0" encoding="utf-8" ?>
<Patch>


	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Vanilla Achievements Expanded</li>
		</mods>

		<match Class="PatchOperationSequence">
			<operations>


				<li Class="PatchOperationAdd"> 
					<xpath>Defs</xpath>
					<value>

						<AchievementsExpanded.AchievementDef>
							<defName>Mashed_AchievementSpiribugs_TamerSilver</defName>
							<label>Gleaming</label>
							<description>Tame your first gleaming spiribug</description>
							<bgtexPath>Achievements/Mashed_AchievementBackground</bgtexPath>
							<tab>Mashed_AchievementsTab</tab>
							<tracker Class="AchievementsExpanded.KindDefTracker">
								<requireAll>false</requireAll>
								<kindDefs>
									<li>
										<key>Mashed_Spiribug_SpiribugSilver</key>
										<value>1</value>
									</li>
								</kindDefs>
								
							</tracker>

							<texPath>Achievements/Mashed_AchievementSpiribugs_TamerSilver</texPath>
							<points>5</points>
						</AchievementsExpanded.AchievementDef>
						
						<AchievementsExpanded.AchievementDef>
							<defName>Mashed_AchievementSpiribugs_TamerJade</defName>
							<label>Glistening</label>
							<description>Tame your first glistening spiribug</description>
							<bgtexPath>Achievements/Mashed_AchievementBackground</bgtexPath>
							<tab>Mashed_AchievementsTab</tab>
							<tracker Class="AchievementsExpanded.KindDefTracker">
								<requireAll>false</requireAll>
								<kindDefs>
									<li>
										<key>Mashed_Spiribug_SpiribugJade</key>
										<value>1</value>
									</li>
								</kindDefs>
								
							</tracker>

							<texPath>Achievements/Mashed_AchievementSpiribugs_TamerJade</texPath>
							<points>5</points>
						</AchievementsExpanded.AchievementDef>
						
						<AchievementsExpanded.AchievementDef>
							<defName>Mashed_AchievementSpiribugs_TamerGold</defName>
							<label>Gilded</label>
							<description>Tame your first gilded spiribug</description>
							<bgtexPath>Achievements/Mashed_AchievementBackground</bgtexPath>
							<tab>Mashed_AchievementsTab</tab>
							<tracker Class="AchievementsExpanded.KindDefTracker">
								<requireAll>false</requireAll>
								<kindDefs>
									<li>
										<key>Mashed_Spiribug_SpiribugGold</key>
										<value>1</value>
									</li>
								</kindDefs>
								
							</tracker>

							<texPath>Achievements/Mashed_AchievementSpiribugs_TamerGold</texPath>
							<points>10</points>
						</AchievementsExpanded.AchievementDef>

						<AchievementsExpanded.AchievementDef>
							<defName>Mashed_AchievementSpiribugs_InteractFirst</defName>
							<label>Spiribug Acquaintance</label>
							<description>Have a spiribug interact with a pawn wearing a petalace for the first time</description>
							<bgtexPath>Achievements/Mashed_AchievementBackground</bgtexPath>
							<tab>Mashed_AchievementsTab</tab>
							<tracker Class="AchievementsExpanded.RecordEventTracker">
								<def>Mashed_Spiribug_SpiribugInteractions</def>
								<count>1</count>
							</tracker>
							<texPath>Achievements/Mashed_AchievementSpiribugs_InteractFirst</texPath>
							<points>5</points>
						</AchievementsExpanded.AchievementDef>
						
						<AchievementsExpanded.AchievementDef>
							<defName>Mashed_AchievementSpiribugs_InteractMany</defName>
							<label>Spiribug Friend</label>
							<description>Have a spiribug interact with a pawn wearing a petalace for the tenth time</description>
							<bgtexPath>Achievements/Mashed_AchievementBackground</bgtexPath>
							<tab>Mashed_AchievementsTab</tab>
							<tracker Class="AchievementsExpanded.RecordEventTracker">
								<def>Mashed_Spiribug_SpiribugInteractions</def>
								<count>10</count>
							</tracker>
							<texPath>Achievements/Mashed_AchievementSpiribugs_InteractMany</texPath>
							<points>10</points>
						</AchievementsExpanded.AchievementDef>
						
						<AchievementsExpanded.AchievementDef>
							<defName>Mashed_AchievementSpiribugs_InteractMore</defName>
							<label>Spiribug Magnet</label>
							<description>Have a spiribug interact with a pawn wearing a petalace for the 25th time</description>
							<bgtexPath>Achievements/Mashed_AchievementBackground</bgtexPath>
							<tab>Mashed_AchievementsTab</tab>
							<tracker Class="AchievementsExpanded.RecordEventTracker">
								<def>Mashed_Spiribug_SpiribugInteractions</def>
								<count>25</count>
							</tracker>
							<texPath>Achievements/Mashed_AchievementSpiribugs_InteractMore</texPath>
							<points>15</points>
						</AchievementsExpanded.AchievementDef>
					</value>
				</li>
			</operations>
		</match>
	</Operation>


</Patch>

